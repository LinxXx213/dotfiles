export PATH=$HOME/bin:/usr/local/bin:$PATH

if [ -d "$HOME/.local/bin" ]; then
    export PATH="$HOME/.local/bin:$PATH";
fi

# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

ZSH_THEME="afowler"

# oh-my-zsh settings
DISABLE_AUTO_UPDATE="true"
ENABLE_CORRECTION="false"

# CASE_SENSITIVE="true"
# HYPHEN_INSENSITIVE="true"
# export UPDATE_ZSH_DAYS=13
DISABLE_AUTO_TITLE="true"
# COMPLETION_WAITING_DOTS="true"

plugins=(git common-aliases docker jump)

source $ZSH/oh-my-zsh.sh

# User configuration
[[ $TMUX = "" ]] && export TERM="xterm-256color"
export EDITOR='vim'
export VISUAL='vim'

# history settings
HISTFILE=~/.zsh_history
HISTSIZE=10000
HIST_STAMPS="dd-mm-yyyy"
SAVEHIST=10000

setopt HIST_VERIFY
#setopt SHARE_HISTORY # share history between sessions ???
setopt EXTENDED_HISTORY # add timestamps to history

# show slash at cd
zstyle ':completion:*' special-dirs true

# ssh
export SSH_KEY_PATH="~/.ssh/id_rsa"

function glog () {
    git log -p -40 $1 | vim - -R -c "set foldmethod=syntax"
}

# Always use 256 colors with tmux
if [[ -r $(which tmux-next) ]]; then
    alias tmux="tmux-next -2"
else
    alias tmux="tmux -2"
fi

# Enable if powerline is installed
if [[ -a ~/.local/lib/python2.7/site-packages/powerline/bindings/zsh/powerline.zsh ]]; then
    source ~/.local/lib/python2.7/site-packages/powerline/bindings/zsh/powerline.zsh
fi

# Include if there is local aliases
if [[ -a ~/.aliases_local ]]; then
    source ~/.aliases_local
fi
