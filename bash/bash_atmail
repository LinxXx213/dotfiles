# include atmails exim bin in PATH
if [ -d /usr/local/atmail/mailserver/bin ]; then
    PATH=/usr/local/atmail/mailserver/bin:"${PATH}"
fi

if [ -f /usr/local/atmail/mailserver/bin/exim ]; then
    EXIM=/usr/local/atmail/mailserver/bin/exim

    # aliases for @mail / exim
    alias maillog='sudo tail -f /usr/local/atmail/mailserver/spool/log/mainlog -n 15'
    alias errorlog='sudo tail -f /usr/local/atmail/mailserver/spool/log/rejectlog -n 15'

    alias e_viewqueue='sudo $EXIM -bp'
    alias e_viewqueue_verbose='sudo $EXIM -bp|exiqsumm'
    alias e_startqueue='sudo $EXIM -q'
    alias e_startqueue_verbose='sudo $EXIM -q -v'
fi
